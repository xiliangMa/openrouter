# ============================================================================
# 数据库配置
# ============================================================================
DB_PASSWORD=your_secure_db_password
DATABASE_URL=postgres://openrouter:${DB_PASSWORD}@localhost:5432/openrouter?sslmode=disable

# ============================================================================
# Redis配置
# ============================================================================
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0

# ============================================================================
# JWT认证配置
# ============================================================================
JWT_SECRET=your_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# ============================================================================
# 服务器配置
# ============================================================================
PORT=8080
GIN_MODE=debug
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT=100

# ============================================================================
# OAuth2 提供商配置
# ============================================================================
# GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# WeChat (微信)
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# Feishu (飞书)
FEISHU_APP_ID=your_feishu_app_id
FEISHU_APP_SECRET=your_feishu_app_secret

# X (Twitter)
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Facebook
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# Xiaohongshu (小红书) - 可能需要自定义OAuth实现
XIAOHONGSHU_CLIENT_ID=your_xiaohongshu_client_id
XIAOHONGSHU_CLIENT_SECRET=your_xiaohongshu_client_secret

# ============================================================================
# 支付提供商配置
# ============================================================================
# Stripe (信用卡)
STRIPE_API_KEY=your_stripe_api_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# 支付宝
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key

# 微信支付
WECHAT_PAY_MCH_ID=your_wechat_pay_mch_id
WECHAT_PAY_API_KEY=your_wechat_pay_api_key

# ============================================================================
# 邮件配置
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@openrouter.ai

# ============================================================================
# 外部API配置
# ============================================================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google AI
GOOGLE_AI_API_KEY=your_google_ai_api_key

# ============================================================================
# 监控与日志
# ============================================================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn

# ============================================================================
# 前端配置 (用于Docker Compose)
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# 开发环境覆盖
# ============================================================================
# 在开发环境中可以设置为 true
SKIP_PAYMENT_VERIFICATION=false
SKIP_OAUTH_VERIFICATION=false
